<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChiTietPhim"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_chiTiet"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="0dp"
        android:layout_weight="6"/>
    <TextView
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:textSize="@dimen/text_size_edt"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_thong_tin_phim"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="@dimen/text_size_edt"

                android:text="@string/edt_ten_phim"/>

            <EditText
                android:id="@+id/edtTenPhim"
                android:layout_width="0dp"
                android:textSize="@dimen/text_size_edt"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:layout_weight="7"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="@dimen/text_size_edt"
                android:text="@string/edt_mo_ta"/>

            <EditText
                android:id="@+id/edtMoTa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_edt"
                android:enabled="false"
                android:layout_weight="7"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="@dimen/text_size_edt"
                android:text="@string/edt_the_loai"/>

            <EditText
                android:id="@+id/edtTheLoai"
                android:layout_width="0dp"
                android:textSize="@dimen/text_size_edt"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:layout_weight="7"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="@dimen/text_size_edt"
                android:text="@string/edt_thoi_luong"/>

            <EditText
                android:id="@+id/edtThoiLuong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_edt"
                android:enabled="false"
                android:layout_weight="7"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="@dimen/text_size_edt"
                android:text="@string/edt_ngon_ngu"/>

            <EditText
                android:id="@+id/edtNgonNgu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_edt"
                android:enabled="false"
                android:layout_weight="7"/>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btnDatVe"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_btn"
        android:text="@string/btn_dat_ve"/>

</LinearLayout>