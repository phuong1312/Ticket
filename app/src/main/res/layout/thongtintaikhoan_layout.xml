<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThongTinTaiKhoanActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/title_ifo"
        android:textSize="29dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/layout_magrin"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txTaiKhoan"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:background="@drawable/custom_border"
            android:textSize="@dimen/text_size_edt"
            android:minHeight="@dimen/min_height"/>

        <TextView
            android:id="@+id/txMatKhau"
            android:textSize="@dimen/text_size_edt"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/custom_border"
            android:minHeight="@dimen/min_height" />



        <TextView
            android:id="@+id/txSdt"
            android:textSize="@dimen/text_size_edt"
            android:drawableStart="@drawable/ic_baseline_phone_24"
            android:background="@drawable/custom_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="11"
            android:minHeight="@dimen/min_height"
            android:layout_marginTop="@dimen/margin_top"/>

        <TextView
            android:id="@+id/txEmail"
            android:textSize="@dimen/text_size_edt"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:background="@drawable/custom_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:minHeight="@dimen/min_height"
            android:layout_marginTop="@dimen/margin_top"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSua1"
            android:layout_width="@dimen/btn_width"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border"
            android:text="@string/btn_sua"
            android:textSize="@dimen/text_size_btn" />

    </LinearLayout>

</LinearLayout>